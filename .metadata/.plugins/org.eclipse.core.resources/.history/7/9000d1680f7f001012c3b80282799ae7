@Controller
public class BankController {

    @Autowired
    private AccountService accountService;

    @GetMapping("/")
    public String home(Model model) {
        model.addAttribute("title", "Welcome to SecureNet Bank Application");
        return "home";
    }

    @GetMapping("/accounts")
    public String accounts(Model model) {
        model.addAttribute("accounts", accountService.getAllAccounts().values());
        model.addAttribute("title", "Your Accounts");
        return "accounts";
    }

    // SHOW transfer form
    @GetMapping("/transfer")
    public String transferForm(Model model) {
        model.addAttribute("title", "Money Transfer");
        return "transfer"; 
    }

    // HANDLE transfer submit
    @PostMapping("/transfer")
    public String doTransfer(@RequestParam String fromAcc,
                             @RequestParam String toAcc,
                             @RequestParam double amount,
                             Model model) {

        // Check account number length
        if (fromAcc.length() != 12 || toAcc.length() != 12) {
            model.addAttribute("message", "Account numbers must be exactly 12 digits.");
            model.addAttribute("title", "Money Transfer");
            return "transfer";
        }

        boolean success = accountService.transfer(fromAcc, toAcc, amount);

        if (success) {
            model.addAttribute("message", "Transfer Successful!");
        } else {
            model.addAttribute("message", "Transfer Failed. Check balance or account numbers.");
        }

        model.addAttribute("title", "Money Transfer");
        return "transfer";
    }

    @GetMapping("/transactions")
    public String transactions(Model model) {
        model.addAttribute("transactions", accountService.getTransactions());
        model.addAttribute("title", "Transaction History");
        return "transactions";
    }
}
